<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_focused="false" android:state_pressed="false" android:state_selected="false">
    <shape android:shape="rectangle">
      <!--        <stroke android:width="1dp" android:color="@color/colorAccentDark" />-->
      <solid android:color="@color/colorAccent" />
      <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="3dp" />
      <corners android:radius="50dp" />
    </shape>
  </item>
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <solid android:color="@color/colorPrimaryDark" />
      <!--       <stroke android:width="1dp" android:color="@color/colorAccentDark" />-->
      <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="3dp" />
      <corners android:radius="50dp" />
    </shape>
  </item>

</selector>

